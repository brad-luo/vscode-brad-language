{
  "name": "brad-language",
  "publisher": "bradluo",
  "displayName": "brad language",
  "description": "A brad language plugin for highlighting and snippets completetion",
  "version": "0.0.1",
  "main": "./out/extension.js",
  "homepage": "https://github.com/brad-luo/vscode-brad-language",
  "icon": "images/icon.png",

  "repository": {
    "type": "git",
    "url": "https://github.com/brad-luo/vscode-brad-language"
  },
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Snippets",
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:test.helloWorld",
    "onCommand:test.showSelectionCount"
  ],
  "contributes": {
    "languages": [
      {
        "id": "brad.language",
        "extensions": [
          ".brad"
        ],
        "aliases": [
          "Brad"
        ]
      }
    ],
    "grammars": [
			{
				"language": "brad.language",
				"scopeName": "brad.brad", 
				"path": "./syntaxes/brad.tmLanguage"
			}
		],
    "snippets": [
      {
        "language": "brad.language",
        "path": "./snippets/brad.language.json"
      }
    ],
    "configuration": {
      "title": "Brad Test"
    },
    "commands": [
      {
        "command": "test.helloWorld",
        "title": "print"
      },
      {
        "command": "test.showSelectionCount",
        "title": "show test"
      }
    ],
    "keybindings": [
      {
        "command": "test.helloWorld",
        "key": "ctrl+f1",
        "mac": "cmd+f1",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "test.helloWorld",
          "when": "!editor.readOnly"
        }
      ]
    },
    "iconThemes": [
      {
        "id": "turtles",
        "label": "Turtles",
        "path": "./fileicons/turtles-icon-theme.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.62.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4",
    "@vscode/test-electron": "^1.6.2"
  }
}
